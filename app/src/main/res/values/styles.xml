<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BookTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:text">Title</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginLeft">@dimen/title_margin</item>
        <item name="android:layout_marginTop">@dimen/title_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BookAuthor">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:text">Author</item>
        <item name="android:layout_marginLeft">@dimen/title_margin</item>
        <item name="android:layout_marginBottom">@dimen/title_margin</item>
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ViewStyle">
        <item name="android:layout_height">@dimen/view_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorDividerBackground</item>
    </style>

    <style name="SearchButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:padding">@dimen/padding_search_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/Search_button</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
